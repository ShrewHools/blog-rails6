<header id="top">
  <%= render 'shared/social' %>

  <div class="row">
    <div class="col-md-4 category">
      <% @part_categories.first.each do |category|  %>
        <div class="col-md-6 category_s"><%= link_to category.name, category_path(category) %></div>
      <% end %>
    </div>

    <div class="col-md-4 category">
      <%= link_to image_tag("logo.png", alt:"Ely Blog"), root_path %>
    </div>

    <div class="col-md-4 category">
      <% @part_categories.last.each do |category|  %>
        <div class="col-md-6 category_s"><%= link_to category.name, category_path(category) %></div>
      <% end %>
    </div>
  </div>
</header>